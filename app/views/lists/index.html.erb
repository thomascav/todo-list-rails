<p id="notice"><%= notice %></p>

<h1>Listing Lists</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>User</th>
      <th>      </th>
      <th>State</th>
      <th>Due date</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lists.each do |list| %>
      <tr class="listclass">
        <td><%= list.name %></td>
        <td><%= list.user %></td>
        <td><%= list.state %></td>
        <td><%= list.due_date %></td>
        <td><%= list.content %></td>
        <td><%= link_to 'Add task', new_task_path(list_id: list.id) %></td>
        <td><%= link_to 'Show', list %></td>
        <td><%= link_to 'Edit', edit_list_path(list) %></td>
        <td><%= link_to 'Destroy', list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
          <% list.tasks.each do |task| %>
            <tr class="taskclass">
              <td><%= task.name %></td>
              <td><%= task.content %></td>
              <td><%= task.state %></td>
              <td><%= task.list %></td>
              <td><%= task.duration %></td>
              <td><%= link_to 'Show', task %></td>
              <td><%= link_to 'Edit', edit_task_path(task) %></td>
              <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
    <% end %>
  </tbody>
</table>

<br>

