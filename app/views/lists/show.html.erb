<p id="notice"><%= notice %></p>
<h3><%= @list.name %></h3>
<p>
  <strong>Name:</strong>
  <%= @list.name %>
</p>

<p>
  <strong>User:</strong>
  <%= @list.user %>
</p>

<p>
  <strong>State:</strong>
  <%= @list.state %>
</p>

<p>
  <strong>Due date:</strong>
  <%= @list.due_date %>
</p>

<p>
  <strong>Content:</strong>
  <%= @list.content %>
</p>

<%= link_to 'Edit', edit_list_path(@list) %> |
<%= link_to 'Back', lists_path %>
<hr>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Content</th>
      <th>State</th>
      <th>List</th>
      <th>Duration</th>
      <th colspan="3"></th>
    </tr>
  </thead>
<h3>Task list</h3>
  <tbody>
    <% @list.tasks.each do |task| %>
      <tr>
        <td><%= task.name %></td>
        <td><%= task.content %></td>
        <td><%= task.state %></td>
        <td><%= task.list %></td>
        <td><%= task.duration %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'Home', lists_path %>
